@page
@model LoginModel

@{
    ViewData["Title"] = "Login";
}

<link rel="stylesheet" href="/css/login-signup.css">

<div class="shadowed-bg page-overlay"></div>
@Html.PartialAsync("Welcome/_Nav").Result
<div class="center">
    <div id="LoginForm">
        <header>Login</header>
        <form id="account" method="post">

            <div asp-validation-summary="All" class="text-danger"></div>
            <div class="field">
                <input asp-for="Input.Email" type="email" placeholder="Email" required>
                <label asp-for="Input.Email">Email</label>
            </div>
            <div class="field">
                <input asp-for="Input.Password" type="password"  placeholder="Password" required>
                <label asp-for="Input.Password" >Password</label>
            </div>
            <div class="btn btn-outline-primary" onclick="document.getElementById('rmberme').checked = !document.getElementById('rmberme').checked">
                <label class="checkbox-button">
                    <span class="checkbox-button__label">Remember ME</span>
                    <input asp-for="Input.RememberMe" type="checkbox" class="checkbox-button__input" id="rmberme">
                    <span class="checkbox-button__control"></span>
                </label>
            </div>
            <button id="submit-btn" class="btn" type="submit">Login</button>
        </form>
        <p id="extra-info">Don't Have an Account?<br><a href="/Identity/Account/Register">Click Here to Sign Up</a></p>
    </div>
</div>
